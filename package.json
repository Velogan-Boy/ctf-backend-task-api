   "dependencies": {
      "@prisma/client": "^4.14.0",
      "bcryptjs": "^2.4.3",
      "cors": "^2.8.5",
      "dotenv-flow": "^3.2.0",
      "express": "^4.18.2",
      "jsonwebtoken": "^9.0.0",
      "morgan": "^1.10.0",
      "nodemailer": "^6.9.2"
   },
   "devDependencies": {
      "cross-env": "^7.0.3",
      "dotenv-cli": "^7.2.1",
      "nodemon": "^2.0.22"
   }
